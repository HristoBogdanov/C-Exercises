@{
    this.Layout = "/Views/Shared/_Site.cshtml";
    ViewData["title"] = "LOGIN";
}

<fieldset>
    <legend>LOGIN</legend>
    <form action="/Home/Login" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">Username:</div>
                <div class="col-2">
                    <input type="text" name="username" />
                </div>
            </div>
            <div class="row">
                <div class="col-1">Password:</div>
                <div class="col-2"><input type="password" name="password" /></div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" class="right" value="Login" />
                </div>
            </div>
        </div>
    </form>
</fieldset>